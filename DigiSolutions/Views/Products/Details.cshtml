@model DigiSolutions.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

<div class="container">
    <div class="card mb-3" style="max-width: auto; margin-top: 104px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Image" class="img-fluid rounded-start" alt="..."
                     style="max-width: 500px; padding-left: 50px;">
            </div>
            <div class="col-md-8" style="max-width: auto; padding-left: 50px;">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">
                        @Model.Description
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <!-- HTML !-->
                    <div class="d-flex justify-content-end">
                        <button class="btn button " role="button">
                            Buy It Now
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>